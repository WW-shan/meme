# BSC WebSocket Node URL
# Free public nodes (may have rate limits):
# - wss://bsc-ws-node.nariox.org
# - wss://bsc.publicnode.com
# Paid nodes (recommended for production):
# - QuickNode, Ankr, GetBlock, etc.
BSC_WSS_URL=wss://bsc-ws-node.nariox.org

# FourMeme Contract Address - TokenManager2
FOURMEME_CONTRACT=0x5c952063c7fc8610FFDB798152D69F0B9550762b

# Contract ABI file path
CONTRACT_ABI_PATH=config/TokenManager.lite.abi

# Output Settings
OUTPUT_DIR=data/events
LOG_LEVEL=INFO
LOG_FILE=logs/monitor.log

# Connection Settings
MAX_RETRY_DELAY=60
HEARTBEAT_INTERVAL=60

# Event Filtering
MONITOR_EVENTS=all

# ========== 交易配置 (TRADING CONFIGURATION) ==========

# 钱包私钥 (务必保密! Never commit this!)
PRIVATE_KEY=your_private_key_here

# 交易开关 (Trading switches)
ENABLE_TRADING=false
ENABLE_BACKTEST=true

# 买入策略 (Buy strategy)
GAS_MULTIPLIER=1.2
BUY_SLIPPAGE_PERCENT=15

# 卖出策略 - 第一阶段 (Sell strategy - Phase 1)
TAKE_PROFIT_PERCENT=200
TAKE_PROFIT_SELL_PERCENT=90
STOP_LOSS_PERCENT=-50
MAX_HOLD_TIME_SECONDS=60

# 卖出策略 - 第二阶段/底仓 (Sell strategy - Phase 2/Moonshot)
KEEP_POSITION_FOR_MOONSHOT=true
MOONSHOT_PROFIT_PERCENT=500
MOONSHOT_STOP_LOSS_PERCENT=-30
MOONSHOT_MAX_HOLD_HOURS=24

# 风控参数 (Risk management)
MAX_DAILY_TRADES=100
MAX_DAILY_INVESTMENT_BNB=5
MAX_CONCURRENT_POSITIONS=10

# 过滤条件 (Filtering)
FILTER_KEYWORDS_BLACKLIST=scam,rug,test,dev,fake,copy,bot
FILTER_MIN_INITIAL_LIQUIDITY=0.01

# 热度追踪 (Trend tracking)
FILTER_ENABLE_TREND_TRACKING=true
FILTER_TREND_WINDOW_MINUTES=5
FILTER_TREND_THRESHOLD=3
FILTER_TREND_PREFIX_LENGTH=4
FILTER_CLUSTER_BUY_AMOUNT_BNB=0.05

# 地址过滤 (Address filtering)
FILTER_ENABLE_ADDRESS_CHECK=true
FILTER_MAX_TOKENS_PER_CREATOR_24H=5
FILTER_MIN_CREATOR_TX_COUNT=10
FILTER_MIN_CREATOR_BALANCE_BNB=0.1
FILTER_MIN_CREATOR_TOKEN_INTERVAL_MINUTES=30

# 代币基本信息过滤 (Token info filtering)
FILTER_MIN_NAME_LENGTH=2
FILTER_MAX_NAME_LENGTH=30
FILTER_MIN_SYMBOL_LENGTH=2
FILTER_MAX_SYMBOL_LENGTH=10

# 代币供应量检查 (Supply checks)
FILTER_MIN_TOTAL_SUPPLY=1000000
FILTER_MAX_TOTAL_SUPPLY=1000000000000

# 流动性比例检查 (Liquidity ratio - launch_fee / total_supply)
FILTER_MIN_LIQUIDITY_RATIO=0.00001