[Unit]
Description=FourMeme Trading Bot
After=network.target

[Service]
Type=simple
User=root
# 将 /root/meme 替换为你的实际路径
WorkingDirectory=/root/meme
# 指向你的 start_bot.sh 脚本
ExecStart=/bin/bash /root/meme/tools/start_bot.sh
Restart=always
RestartSec=10
# 环境变量
Environment=PYTHONUNBUFFERED=1

# 日志设置 (StandardOutput=append:file 不支持所有 systemd 版本，建议用 syslog 或 重定向)
StandardOutput=append:/root/meme/logs/bot.log
StandardError=append:/root/meme/logs/bot_error.log

[Install]
WantedBy=multi-user.target
